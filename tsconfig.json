{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ESNext", "ES2019", "es2017", "es7", "es6", "dom"],
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist", "editor", "example", "__test__"]
}
