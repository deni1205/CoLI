{
    "name": "coli-workspace",
    "version": "0.0.0",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*",
        "editor",
        "example"
    ],
    "scripts": {
        "clean": "rimraf packages/*/dist",
        "lerna": "lerna",
        "build": "yarn clean && lerna run build",
        "publish:all": "lerna publish --force-publish coli",
        "bootstrap": "lerna bootstrap",
        "editor": "yarn workspace editor run dev",
        "build:editor": "yarn workspace editor run build"
    },
    "devDependencies": {
        "lerna": "^5.3.0"
    }
}